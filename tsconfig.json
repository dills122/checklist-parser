{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  },
  "exclude": ["test", "mocks", "tests", "./types/**/*"]
}
